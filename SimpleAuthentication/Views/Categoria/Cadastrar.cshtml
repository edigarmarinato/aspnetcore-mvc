@model CategoriaModel

<h2>Cadastro de Categoria</h2>
<hr>
<form method="post">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" placeholder="Categoria" asp-for="@Model.Nome">
        <label asp-for="@Model.Nome"></label><br>
        <span class="text-danger" asp-validation-for="@Model.Nome"></span>
    </div>
    <p>
        <a asp-action="Index"><button type="button" class="btn btn-secondary">Cancelar</button></a>

        <input type="submit" value="Salvar" class="btn btn-primary">
    </p>
</form>
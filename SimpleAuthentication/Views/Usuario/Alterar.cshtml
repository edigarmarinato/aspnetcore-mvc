@model UsuarioModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

<h2>Alteração de Usuário</h2>
<hr>
<form method="post">
    <div class="form-floating">
        <input type="text" class="form-control" placeholder="Nome" asp-for="@Model.Nome">
        <label asp-for="@Model.Nome"></label><br>
        <span class="text-danger" asp-validation-for="@Model.Nome"></span>
    </div>
    <div class="form-floating">
        <input type="text" class="form-control" placeholder="Email" asp-for="@Model.Email">
        <label asp-for="@Model.Email"></label><br>
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div>
        <p>Usuário Administrador</p>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="adm" asp-for="@Model.IsAdmin" value="True">
            <label class="form-check-label" for="">Sim</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="adm" asp-for="@Model.IsAdmin" value="False">
            <label class="form-check-label" for="">Não</label>
        </div>
    </div><br>
    <p>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <input type="submit" value="Salvar" class="btn btn-primary">
    </p>
</form>
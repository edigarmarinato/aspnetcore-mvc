@model IEnumerable<ProdutoModel>

<link rel="stylesheet" href="~/css/tabelas.css">

<h1>Listagem de Produtos</h1>
<hr>
<a asp-action="Cadastrar" class="btn btn-primary">
    <i class="bi bi-plus"></i>
    Novo Produto
</a>
<hr>
@if (Model.Count() > 0)
{
    <table class="table table-sm table-striped table-hover table-produtos">
        <thead class="bg-dark bg-gradient text-white">
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Estoque</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id.ToString("D2")</td>
                    <td>@item.Nome</td>
                    <td>@item.Categoria.Nome</td>
                    <td>@item.Estoque?.ToString("D3")</td>
                    <td>@item.Preco?.ToString("C")</td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="Alterar" asp-route-id="@item.Id" title="Alterar">Alterar</a>

                        <a class="btn btn-danger btn-sm" asp-action="Excluir" asp-route-id="@item.Id" title="Excluir">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Não há produtos cadastrados.</h3>
}
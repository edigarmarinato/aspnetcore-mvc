@using Auth.Models;
@model CamaradasModel;

<h2>Exclusão de Camarada</h2>
<hr>
<h3>Deseja realmente excluir o camarada
    <span class="text-danger">@Model.Nome</span>?</h3>
<form method="post" asp-action="ProcessarExclusao" class="mt-3">
    <input type="hidden" asp-for="@Model.idCamaradas">
    <p>
        <a asp-action="Index"><button type="button" class="btn btn-secondary">Não</button></a>

        <input type="submit" value="Sim" class="btn btn-danger">
    </p>
</form>